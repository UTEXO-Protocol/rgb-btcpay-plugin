@model RGBSetupViewModel
@{
    ViewData["Title"] = "Setup Utexo Wallet";
}

<div class="sticky-header-setup"></div>
<div class="sticky-header">
    <h2>@ViewData["Title"]</h2>
</div>

<partial name="_StatusMessage" />

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title mb-4">Create Utexo Wallet</h4>
                
                <p class="text-muted mb-4">
                    Accept native USDT and digital asset payments powered by Utexo. 
                    Create a wallet to start receiving payments.
                </p>

                <form asp-action="SetupWallet" asp-route-storeId="@Model.StoreId" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="mb-3">
                        <label asp-for="WalletName" class="form-label"></label>
                        <input asp-for="WalletName" class="form-control" placeholder="My Utexo Wallet" />
                        <span asp-validation-for="WalletName" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="SelectedNetwork" class="form-label">Network</label>
                        <select asp-for="SelectedNetwork" class="form-select" id="networkSelect">
                            @foreach (var network in Model.AvailableNetworks)
                            {
                                <option value="@network" selected="@(network == Model.SelectedNetwork)">@network</option>
                            }
                        </select>
                        <div class="form-text">Select the Bitcoin network for this wallet.</div>
                    </div>

                    <div class="alert alert-info" id="networkInfo">
                        <strong>Network Configuration:</strong>
                        <ul class="mb-0 mt-2">
                            <li>Electrum: <code id="electrumUrl">@Model.ElectrumUrl</code></li>
                            <li>Proxy: <code id="proxyUrl">@Model.ProxyEndpoint</code></li>
                        </ul>
                    </div>

                    <hr class="my-4" />
                    <h5 class="mb-3"><i class="fa fa-cog"></i> Advanced Settings</h5>
                    
                    <div class="mb-3">
                        <label asp-for="MaxAllocationsPerUtxo" class="form-label">Max Allocations per UTXO</label>
                        <input asp-for="MaxAllocationsPerUtxo" class="form-control" type="number" min="1" max="50" style="max-width: 150px;" />
                        <div class="form-text">
                            Number of RGB allocations each UTXO can hold (1-50). Higher values = fewer UTXOs needed for receiving payments.
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary">
                        <span class="fa fa-wallet"></span> Create Wallet
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section PageFootContent {
<script>
    const networkSettings = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.AllNetworkSettings));
    
    document.getElementById('networkSelect').addEventListener('change', function() {
        const network = this.value;
        const settings = networkSettings[network];
        if (settings) {
            document.getElementById('electrumUrl').textContent = settings.electrum;
            document.getElementById('proxyUrl').textContent = settings.proxy;
        }
    });
</script>
}
